#include <main.h>

const int digit[8]={0x70,0x60,0x50,0x40,0x30,0x20,0x10,0x00};
void main()
{
int32 sayi=12345678;
int32 gecici=sayi;
int sayac=0;
   while(TRUE)
   {
      while(gecici>0)
      {
         if(sayac<9|gecici<0)
         {
            output_b(gecici%10|digit[sayac]);
            delay_ms(200);
            sayac++;
            gecici/=10;
         }
         else
         {
            sayac=0;
         }
         
      }
      gecici=sayi;
   }
}
